<Window x:Class="WPFApp.views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp.views"
        mc:Ignorable="d"
        Title="HomeWindow" Height="632.332" MinHeight="632" MinWidth="1091" Width="1091">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="65*"/>
        </Grid.ColumnDefinitions>
        <local:MasterUserControl x:Name="MasterUserControl"  LAlbum="{Binding LibraryAlbum}"/>
        <local:UserDetailed Grid.Column="1" TheAlbum="{Binding SelectedAlbum,ElementName=MasterUserControl}" />

    </Grid>
</Window>
